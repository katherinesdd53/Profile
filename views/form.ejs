<div class="row">
  <div class="col-md-6" style="margin-left:40px;">
    <form action="/post" method="POST" class="form-horizontal">
      <div class="form-group">
        <label for="title" style="color:black;">Title</label>
        <input type="title" class="form-control" id="inputTitle" placeholder="Name Me" name="title">
      </div>
      <div class="form-group">
        <label for="text" style="color:black;">Post</label>
        <textarea class="form-control" placeholder="What's on your mind?" rows="12" name="text"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>

  <div class="col-md-5">
    <p class="text-right" style="margin-top:20px; margin-left:80px; color:black;">
